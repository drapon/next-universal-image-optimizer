{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
